</div>
<div class="betwixt"></div>
<form id="create-form">
	<div class="form-group size-control">
		<div class="size-line">
			<div class="large-line"></div>
			<div class="medium-line"></div>
			<div class="small-line"></div>
		</div>
		<input type="text" name="size" class="display-size" readonly>
	</div>
	<div class="form-group">
		<span class="description">{{local.section.classic.display}}</span>
		<label class="switch" id="switch">
			<input type="checkbox" name="display" id="display">
			<span class="slider round"></span>
		</label>
		<span class="status" id="status">off</span>
	</div>
	<div class="form-group">
		<label for="type" class="description">{{local.section.classic.type}}</label>
		<input type="text" name="type" class="login_input" value="Classic" id="type" disabled>
	</div>
	<div class="form-group">
		<label for="title" class="description">{{local.section.classic.sectionTitle}}</label>
		<input type="text" name="title" class="login_input" placeholder="Simply dummy Text" id="title">
	</div>
	<div class="form-group">
		<label for="position" class="description">{{local.section.classic.position}}</label>
		<div class="form-position">
		<input type="number" name="position" class="login_input quantity-num" value="1" id="position" readonly>
			<div class="btn-position">
				<span class="quantity-arrow-up"></span>
				<span class="quantity-arrow-down"></span>
			</div>
		</div>
	</div>
	<div class="form-group">
		<span class="description">{{local.section.classic.image}}</span>
		<div class="file-upload">
			<label id="view-upload">
				<input type="file" name="img" class="login_input" accept="image/*" id="img">
			</label>
		</div>
	</div>
	<div class="form-group-textarea">
		<label for="">{{local.section.classic.text}}</label>
		<textarea name="textarea" id="textarea" cols="30" rows="10" class="text"></textarea>
	</div>
	<div class="form-group">
		<button type="submit" class="btn-save">{{local.section.classic.button}}</button>
	</div>
</form>
{{#section 'jquery'}}
	<script src="js/previewImg.js"></script>
{{/section}}